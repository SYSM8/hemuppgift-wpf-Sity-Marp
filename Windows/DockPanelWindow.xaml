<Window x:Class="WpfAssignment.DockPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAssignment"
        mc:Ignorable="d"
        Title="DockPanelWindow" Height="450" Width="800">
    <DockPanel>
        <Button Content="Top" DockPanel.Dock="Top"  Width="80" Height="30" VerticalAlignment="Top"/>
        <Button Content="Bottom" DockPanel.Dock="Bottom" Width="80" Height="30" VerticalAlignment="Bottom" />
        <Button Content="Left" DockPanel.Dock="Left" Width="80" Height="30" HorizontalAlignment="Left" />
        <Button Content="Right" DockPanel.Dock="Right" Width="80" Height="30" HorizontalAlignment="Right" />

        <Grid>
            <Image Source="DockPanelWindowImage/TrophyImage.jpg" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="TrophyImage" />
            <Button x:Name="TrophyBtn" Width="80" Height="30" Content="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Click="TrophyBtn_Click"/>
        </Grid>

    </DockPanel>
    
    
</Window>
